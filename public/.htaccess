# Next.js Static Export - URL Rewriting
# Перенаправление для правильной работы роутинга

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Если запрашивается /catalog/, перенаправляем на catalog.html
  RewriteRule ^catalog/?$ /catalog.html [L]

  # Если запрашивается категория каталога /catalog/category-name/ или /catalog/category-name
  # перенаправляем на /catalog/category-name.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^catalog/([^/]+)/?$ /catalog/$1.html [L]

  # Если запрашивается /about/, перенаправляем на about.html
  RewriteRule ^about/?$ /about.html [L]

  # Если запрашивается /contacts/, перенаправляем на contacts.html
  RewriteRule ^contacts/?$ /contacts.html [L]

  # Если запрашивается /delivery/, перенаправляем на delivery.html
  RewriteRule ^delivery/?$ /delivery.html [L]

  # Если запрашивается файл без расширения, добавляем .html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.*)$ $1.html [L]
</IfModule>

# Кеширование статических файлов
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 1 month"
</IfModule>

# Gzip сжатие
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

